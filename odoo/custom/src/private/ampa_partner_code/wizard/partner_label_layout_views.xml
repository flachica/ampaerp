<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="partner_label_layout_form" model="ir.ui.view">
        <field name="name">partner.label.layout.form</field>
        <field name="model">partner.label.layout</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="partner_ids" />
                        <field name="print_format" widget="radio" />
                    </group>
                </group>
                <footer>
                    <button
                        name="process"
                        string="Confirm"
                        type="object"
                        class="btn-primary"
                    />
                    <button string="Discard" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
